                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image5"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:fontFamily="@font/glacialindifference_regular"
                        android:gravity="center"
                        android:text="MERCREDI"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:paddingRight="20dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image6"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image7"

                            app:layout_constraintDimensionRatio="1:1">

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:fontFamily="@font/glacialindifference_regular"
                        android:gravity="center"
                        android:text="JEUDI"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:paddingRight="20dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image8"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image9"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:fontFamily="@font/glacialindifference_regular"
                        android:gravity="center"
                        android:text="VENDREDI"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:paddingRight="20dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image10"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image11"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:fontFamily="@font/glacialindifference_regular"
                        android:gravity="center"
                        android:text="SAMEDI"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:paddingRight="20dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image12"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image13"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:fontFamily="@font/glacialindifference_regular"
                        android:gravity="center"
                        android:text="DIMANCHE"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:paddingRight="20dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image14"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image15"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </GridLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >


                    <Button
                        android:id="@+id/your_choice_buttonReturn1"
                        
                        
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_arrow"

                        app:layout_constraintDimensionRatio="H,1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/your_choice_buttonReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFDEF"
                    android:fontFamily="@font/glacialindifference_regular"
                    android:text="RETURN"
                    android:id="@+id/return2"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFDEF"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:fontFamily="@font/glacialindifference_regular"
                    android:text="SHARE"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    >


                    <Button
                        android:id="@+id/your_choice_buttonShare1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:background="@drawable/ic_baseline_share_24"
                        android:scaleX="-1"
                        app:layout_constraintDimensionRatio="H,1:1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>