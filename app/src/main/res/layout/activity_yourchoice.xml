<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDEF"
    android:orientation="vertical"
    tools:context=".MakeAChoice">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"

            android:fontFamily="@font/luthier_bold"
            android:text="WEEK"
            android:textAlignment="center"
            android:textColor="#FB4F5A"
            android:textSize="40sp"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/luthier_regular"
            android:text="meal"
            android:textAlignment="center"
            android:textColor="#F6DD67"
            android:textSize="40sp"


            />


        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#303030" />


        <TextView

            android:id="@+id/your_choice_textChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/glacialindifference_bold"
            android:gravity="center"
            android:text="YOUR CHOICE"
            android:textAlignment="center"
            android:textColor="#FB4F5A"
            android:textSize="17sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/planshop_true"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="10">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PLANNING"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/planshop_true"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shopping"
                    android:text="SHOPPING LIST"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/planshop_false"
                    />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:fillViewport="true"
                android:padding="10dp"
                android:scrollbarSize="15dp"
                android:layout_weight="1"
                android:background="@drawable/planshop_true">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="14"
                    android:columnCount="2"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:fontFamily="@font/glacialindifference_regular"
                        android:gravity="center"
                        android:text="LUNDI"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:paddingRight="20dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image1"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/image3"



                            >

                        </Button>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:fontFamily="@font/glacialindifference_regular"
                        android:gravity="center"
                        android:text="MARDI"
                        android:textAlignment="center"
                        android:textColor="@color/black"
